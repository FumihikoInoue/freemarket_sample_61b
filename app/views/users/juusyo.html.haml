.single-container
  .single-header
    %h1.single-header__logo
      = link_to do
        =image_tag "/images/signup-mercari.png", size: "185x49", class: "mercari-logo" 
    %nav.progress-bar
      %ol.clearfix
        %li.through
          会員情報
          .progress-status
        %li.through
          電話番号認証 
          .progress-status
        %li.active
          お届け先住所入力
          .progress-status
        %li
          支払い方法
          .progress-status
        %li
          完了
          .progress-status
  %main.single-main
    %section.single-main__container
      %h2.single-main__container__header 住所入力
      %form.registration-form
        %input{name: "__csrf_value", type: "hidden", value: ""}/
        .registration-form__content
          .form-group
            %label{for: "first_name"} お名前
            %span.form-require 必須
            %input.input-default{name: "first_name", placeholder: "    例) 山田",value: ""}
            %input.input-default{name:"last_name", placeholder: "    例) 彩",  value: ""}
          .form-group
            %label{for: "kana_first_name"} お名前カナ
            %span.form-require 必須
            %input.input-default{name: "kana_first_name", placeholder: "    例) ヤマダ", value: ""}
            %input.input-default{name: "kana_last_name", placeholder: "    例) アヤ", value: ""}
          .form-group
            %label{for: "postalcode"} 郵便番号
            %span.form-require 必須
            %input.input-default{name: "postalcode", placeholder: "    例) 123-4567", value: ""}
          .form-group
            %label{for: "ken"} 都道府県
            %span.form-require 必須
            .select-wrap__address
              .select-default
                = collection_select :suser_id, State.all, :id, :name, class: "select--default"
              %i.fas.fa-angle-down
          .form-group
            %label{for: "map"} 市町村
            %span.form-require 必須
            %input.input-default{name: "map", placeholder: "    例) 横浜市緑区", value: ""}/  
          .form-group
            %label{for: "banchi"} 番地
            %span.form-require 必須
            %input.input-default{name: "bvanchi", placeholder: "    例) 青山1-1-1", value: ""}/  
          .form-group
            %label{for: "building"} 建物名
            %span.form-any 任意
            %input.input-default{name: "building", placeholder: "    例) 柳ビル103", value: ""}/  
          .form-group
            %label{for: "tel_number"} 電話
            %span.form-any 任意
            %input.input-default{name: "tel", placeholder: "    例) 09012345678", value: ""}/      
          =link_to card_users_path do
            %button.btn-default.btn-red{type: "submit"} 次へ進む     
= render 'signup-footer'
