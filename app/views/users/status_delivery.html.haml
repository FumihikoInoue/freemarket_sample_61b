.myp-back-gray
  - breadcrumb :mypage
  = render 'items/header'
  =render 'layouts/breadcrumbs'
  .wrapper-container
    .wrapper
      = render 'myp-side'
      .my-contents 
        .my-content-over
          .myp-tab-con-noti-todo
            .content-title 購入した商品
            %ul.myp-tabs
              %li.news.active
                =link_to "取引中", status_delivery_user_path, class: "mypss3"
              %li.news
                -# %h3.myp 売却済み
                =link_to "過去の取引", status_bought_user_path, class: "mypss4"
            -if @items_images.present?
              - @items_images.each do |item_image|
                =link_to "/items/#{item_image[:item][:id]}" do
                  .item-info
                    .info-left
                      = image_tag src="#{item_image[:image][:image_url]}", size:"99x99"
                    .info-right
                      .info-up
                        = item_image[:item][:item_name]
                      .info-down
            -else
              %ul#mypage-tab-todo.myp-item-list
                %li.myp-item-not-found_old 
                  .mercari-image
              %h3.to-do-list 取引中の商品はありません
  
  = render 'items/adv'
  = render 'items/footer'
  = render 'items/item-circle'