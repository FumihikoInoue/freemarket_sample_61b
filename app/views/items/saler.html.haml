.wrapper-container-saler
  .saler-over
    .saler-icon
      = link_to root_path, class: "user-icon-link" do
        .center
          = image_tag src='prof.jpg', alt: 'プロフィール', height: '60', width: '60', class: 'prof-circle'
      %h2.bold 
        %p ニックネーム
      .myp-num
        .hyo 評価
        %span.bold 0
        .hyo 出品数
        %span.bold 0
    .saler-white
      .likes-box
        .saler-likes-detail
          .saler-icons
            = image_tag src="smile.png", size: "30x30"            
            %p.good-score 14
          .saler-icons
            = image_tag src="not_smile.png", size: "30x30"           
            %p.good-score 0
          .saler-icons
            = image_tag src="not.png", size: "30x30"         
            %p.good-score 0
