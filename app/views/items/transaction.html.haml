.wrapper
  %header.st-header
    = image_tag 'mercari-gray-logo.svg', alt: 'メルカリロゴ', height: '50', width: '185', class: 'mercari-logo-st'
  %main.st-main
    %section.st-buy-container
      %h2.st-head
      %section.st-buy-item
        .st-buy-item-in
          - @item.images.each do |image|
            %h3.st-buy-item-image
            = image_tag "#{image.image_url}", alt: '海を売っています', height: '64', width: '64', class: 'umi'
            %p.buy-item-name #{@item.item_name}
            %form.b-form(action="#" method="POST" class="b-form" novalidate="nova")
              %p.bprice ¥#{@item.price}
              %span.bbprice 送料込み
              .a-toggle ポイントはありません
              .bp-cell1 支払い金額
              .bp-cell2 ¥#{@item.price}
              %p.he-text 配送先と支払い方法の入力を完了してください。
              = form_tag(action: :pay, method: :post) do
                %script.payjp-button{:src => "https://checkout.pay.jp", :type => "text/javascript" ,"data-text" => "購入する" ,"data-key" => "pk_test_b7bd30e3dc029eebfe3a726e"}
      %section.stb-info
        .stb-info-container
          %h3.z 配送先
          %address.bu-text-info 〒-
          = link_to "#", class: 'changing' do  
            %span.x 変更する
            = fa_icon "chevron-right", class: "arrow-right"
      %section.stb-info
        .stb-info-container
          %h3.z 支払い方法
          %address.bu-text-info
          %p.user-input-field-text /
          %figure
          = image_tag 'app.png', alt: '空', height: '0', width: '0', class: 'carappo'
          = link_to "#", class: 'changing' do
            %span.x 変更する
            = fa_icon "chevron-right", class: "arrow-right"
  %footer.st-footer
    %ul.privacy
      %li.pf
        = link_to('プライバシーポリシー', "#", class: "privacypolicy")
      %li.pf
        = link_to('メルカリ利用規約', "#", class: "privacypolicy")
      %li.pf
        = link_to('特定商取引に関する表記', "#", class: "privacypolicy")
    .img-hako
      = image_tag 'logo-gray-footer', alt: 'メルカリロゴ', height: '65', width: '80', class: 'gray'
    %p.ff 
      %small ©︎2019 Mercari