.single-container
  .single-header
    %h1.single-header__logo
      = link_to do
        =image_tag "/images/signup-mercari.png", size: "185x49", class: "mercari-logo" 
    %nav.progress-bar
      %ol.clearfix
        %li.through
          会員情報
          .progress-status
        %li.through
          電話番号認証 
          .progress-status
        %li.active
          お届け先住所入力
          .progress-status
        %li
          支払い方法
          .progress-status
        %li
          完了
          .progress-status
  %main.single-main
    %section.single-main__container
      %h2.single-main__container__header 住所入力
      %form.registration-form
      = form_with model: @user, url: card_signup_index_path, method: :get, local: true do |f|
        %input{name: "__csrf_value", type: "hidden", value: ""}/
        .registration-form__content
          .form-group
            = f.label "お名前(全角)",class: "label" 
            %span.require 必須
            
            = f.text_field :f_name, placeholder: "例)山田",required: 'true',class: "input-default"
            = f.text_field :l_name, placeholder: "例)彩",required: 'true',class: "input-default"
          .form-group
            = f.label "お名前カナ(全角)",class: "label"
            %span.require 必須
            = f.text_field :kana_f_name, placeholder: "例)ヤマダ",class: "label",required: 'true',class: "input-default"
            = f.text_field :kana_l_name, placeholder: "例)アヤ",class: "label",required: 'true',class: "input-default"
          .form-group
            = f.label "郵便番号",class: "label"
            %span.require 必須
          
            = f.text_field :postal_code, placeholder:"    例) 123-4567",class: "label",required: 'true',class: "input-default"
          .form-group
            = f.label "都道府県",class: "label"
            %span.require 必須
            .select-wrap__address
            %select.select-default{name: "prefecture"}
              %option{value: "北海道"} 北海道
              %option{value: "青森県"} 青森県
              %option{value: "岩手県"} 岩手県
              %option{value: "宮城県"} 宮城県
              %option{value: "秋田県"} 秋田県
              %option{value: "山形県"} 山形県
              %option{value: "福島県"} 福島県
              %option{value: "茨城県"} 茨城県
              %option{value: "栃木県"} 栃木県
              %option{value: "群馬県"} 群馬県
              %option{value: "埼玉県"} 埼玉県
              %option{value: "千葉県"} 千葉県
              %option{value: "東京都"} 東京都
              %option{value: "神奈川県"} 神奈川県
              %option{value: "新潟県"} 新潟県
              %option{value: "富山県"} 富山県
              %option{value: "石川県"} 石川県
              %option{value: "福井県"} 福井県
              %option{value: "山梨県"} 山梨県
              %option{value: "長野県"} 長野県
              %option{value: "岐阜県"} 岐阜県
              %option{value: "静岡県"} 静岡県
              %option{value: "愛知県"} 愛知県
              %option{value: "三重県"} 三重県
              %option{value: "滋賀県"} 滋賀県
              %option{value: "京都府"} 京都府
              %option{value: "大阪府"} 大阪府
              %option{value: "兵庫県"} 兵庫県
              %option{value: "奈良県"} 奈良県
              %option{value: "和歌山県"} 和歌山県
              %option{value: "鳥取県"} 鳥取県
              %option{value: "島根県"} 島根県
              %option{value: "岡山県"} 岡山県
              %option{value: "広島県"} 広島県
              %option{value: "山口県"} 山口県
              %option{value: "徳島県"} 徳島県
              %option{value: "香川県"} 香川県
              %option{value: "愛媛県"} 愛媛県
              %option{value: "高知県"} 高知県
              %option{value: "福岡県"} 福岡県
              %option{value: "佐賀県"} 佐賀県
              %option{value: "長崎県"} 長崎県
              %option{value: "熊本県"} 熊本県
              %option{value: "大分県"} 大分県
              %option{value: "宮崎県"} 宮崎県
              %option{value: "鹿児島県"} 鹿児島県
              %option{value: "沖縄県"} 沖縄県
              %option{value: "未定"} 未定
              %i.fas.fa-angle-down
          .form-group
            = f.label "市町村",class: "label"
            %span.require 必須
            = f.text_field :map, placeholder: "    例) 横浜市緑区",class: "label",required: 'true',class: "input-default"
          .form-group
            = f.label "番地",class: "label"
            %span.require 必須
            
            = f.text_field :banchi, placeholder: "    例) 青山1-1-1",class: "label",required: 'true',class: "input-default"
          .form-group
            = f.label "建物名",class: "label"
            %span.form-any 任意
            = f.text_field :building, placeholder: "    例) 柳ビル103",class: "label",required: 'true',class: "input-default"
          .form-group
            = f.label "電話",class: "label"
            %span.form-any 任意
            = f.text_field :tel_number, placeholder: "    例) 09012345678",class: "label",required: 'true',class: "input-default"  
          .form-group
          =f.submit"次へ進む" ,class: " btn-default " 
= render 'signup/signup-footer'
