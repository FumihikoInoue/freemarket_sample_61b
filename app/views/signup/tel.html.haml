.single-container
  .single-header
    %h1.single-header__logo
      = link_to do
        =image_tag "/images/signup-mercari.png", size: "185x49", class: "mercari-logo" 
    %nav.progress-bar
      %ol.clearfix
        %li.through
          会員情報
          .progress-status
        %li.active
          電話番号認証 
          .progress-status
        %li
          お届け先住所入力
          .progress-status
        %li
          支払い方法
          .progress-status
        %li
          完了
          .progress-status
  %main.single-main
    %section.single-main__container
      %h2.single-main__container__header
        電話番号の確認 
      = form_with model: @user, url: address_signup_index_path , method: :get, class: 'registration-form', local: true do |f|
        .registration-form__content
          .form-group
            = f.label "携帯の番号",class: "label"
            %span.require 必須
            = f.text_field :tel_number, placeholder: "携帯の番号を入力",required: 'true',class: "input-default"
          =f.submit "次へ進む" ,class: "btn-default"
= render 'users/signup-footer'