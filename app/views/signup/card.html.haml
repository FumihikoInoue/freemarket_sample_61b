.single-container
  .single-header
    %h1.single-header__logo
      = link_to do
        =image_tag "/images/signup-mercari.png", size: "185x49", class: "mercari-logo" 
    %nav.progress-bar
      %ol.clearfix
        %li.through
          会員情報
          .progress-status
        %li.through
          電話番号認証 
          .progress-status
        %li.through
          お届け先住所入力
          .progress-status
        %li.active
          支払い方法
          .progress-status
        %li
          完了
          .progress-status
  %main.single-main
    .content-signin
      .content-signin__1
        %h2.content-signin__1__top 
          支払い方法
        .card-form
        = form_with url: signup_path, method: :post,id: 'cardInput', local: true do |f|
          .card-form__input
          .card-form__box
            .form-number
            %label.form-number__card カード番号
            %span.form-number__require 必須
            = f.text_field :keyword, placeholder: '半角数字のみ',maxlength:"19", class:"form-number__input",id: "card_number"
            %ul.form-number__error-text
            %ul.form-number__card-list
              %li.form-number__card-list__visa
                = image_tag"/images/visa.svg",class:"form-number__card-list__visa"
              %li.form-number__card-list__master
                = image_tag"/images/master-card.svg",class:"form-number__card-list__master"
              %li.form-number__card-list__saison
                = image_tag"/images/saison-card.svg",class:"form-number__card-list__saison"
              %li.form-number__card-list__jcb
                = image_tag"/images/jcb.svg",class:"form-number__card-list__jcb"
              %li.form-number__card-list__american
                = image_tag"/images/american_express.svg",class:"form-number__card-list__american"
              %li.form-number__card-list__dainers
                = image_tag"/images/dinersclub.svg",class:"form-number__card-list__dainers"
              %li.form-number__card-list__discover
                = image_tag"/images/discover.svg",class:"form-number__card-list__discover"
            .form-signup
              %label.form-signup__expire カード番号
              %span.form-number__require 必須
              %br 
              .form-signup__month
                %select#exp_month.form-signup__month__select
                  %option{value:"1"} 01
                  %option{value:"2"} 02
                  %option{value:"3"} 03
                  %option{value:"4"} 04
                  %option{value:"5"} 05
                  %option{value:"6"} 06
                  %option{value:"7"} 07
                  %option{value:"8"} 08
                  %option{value:"9"} 09
                  %option{value:"10"} 10
                  %option{value:"11"} 11
                  %option{value:"12"} 12
                %i.form-signup__month__icon.fas.fa-chevron-down
              %span.form-signup__str 月
              %br
              .form-signup__year
                %select#exp_year.form-signup__month__select
                  %option{value:"2019"} 19
                  %option{value:"2020"} 20
                  %option{value:"2021"} 21
                  %option{value:"2022"} 22
                  %option{value:"2023"} 23
                  %option{value:"2024"} 24
                  %option{value:"2025"} 25
                  %option{value:"2026"} 26
                  %option{value:"2027"} 27
                  %option{value:"2028"} 28
                  %option{value:"2029"} 29
                %i.form-signup__month__icon.fas.fa-chevron-down
              %span.form-signup__str 年

            .form-security
              %label.form-signup__expire セキュリティコード
              %span.form-security__require 必須

              = f.text_field :keyword2, placeholder: 'カード背面4桁もしくは3桁の番号', class:"form-security__input",id: "cvc"
              #card_token
              %ul.form-security__error-message
              .form-security__info 
                %span.form-security__info__question?
                カード裏面の番号とは？
          
            .has-error-text
            = f.submit value: "次へ進む", class: "btn-default", id: "token_submit"
= render 'signup/signup-footer'
